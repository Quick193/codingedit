{
  "name": "raise",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Raise crowdfunding platform workspace",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install --workspace backend && npm install --workspace frontend",
    "dev:backend": "npm run dev --workspace backend",
    "start:backend": "npm start --workspace backend",
    "lint:backend": "npm run lint --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "build:frontend": "npm run build --workspace frontend",
    "preview:frontend": "npm run preview --workspace frontend",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "start": "npm run start:backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
